{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "JSON schema for the Web Accessibility rules.",
	"type": "object",
	"rules": [
		{
			"type": "Semantic",
			"identifier": [
				"<div(?:.|)+?>",
				"<span(?:.|)+?>"
			],
			"severity": 3,
			"message": "Use Semantic HTML5 or specify a WAI-ARIA role [role=\"\"]",
			"filters": [
				{
					"identifier": "role=(?:.*?[a-z].*?)\"",
					"options": {
						"contains": false,
						"negative": true,
						"replace": false
					}
				}
			]
		},
		{
			"type": "Buttonify",
			"identifier": [
				"<span(?:.|)+?>"
			],
			"severity": 3,
			"message": "A <span> is used as a button, change it to a button element [<button>]",
			"filters": [
				{
					"identifier": "<span(?:.+?)(?:button|btn)(?:.+?)>",
					"options": {
						"contains": true,
						"negative": false,
						"replace": false
					}
				}
			]
		},
		{
			"type": "Description",
			"identifier": [
				"<a(?:.)+?>(?:(?:\\s|\\S)+?(?=<\/a>))<\/a>"
			],
			"severity": 3,
			"message": "Provide a descriptive text in between the tags",
			"filters": [
				{
					"identifier": "<(?:\\s|\\S)+?>",
					"options": {
						"contains": false,
						"negative": false,
						"replace": true,
						"replaceOptions": {
							"newValue": "''",
							"regexFlag": "ig"
						}

					}
				}
			]
		}
	]
}